<Window x:Class="WpfSamples.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfSamples"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        mc:Ignorable="d"
        Title="{Binding Title}" Height="768" Width="1024"
        Style="{DynamicResource WindowStyle}"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="8">
        <DockPanel>
            <TextBlock Text="Main Window" DockPanel.Dock="Top"></TextBlock>
            <ContentControl prism:RegionManager.RegionName="ContentRegion" Margin="0 16 0 0" />
        </DockPanel>
    </Grid>
</Window>
